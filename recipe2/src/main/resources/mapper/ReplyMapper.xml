<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.mapper.ReplyMapper">


    <select id="getRepliesByBoardNo" parameterType="int" resultMap="replyMap">
        SELECT r.*, u.nick, u.bpname
        FROM reply r
        JOIN user u ON r.userno = u.userno
        WHERE r.bno = #{bno}
    </select>

    <insert id="addReply" parameterType="com.test.model.ReplyVO">
        INSERT INTO reply (rnote, score, bno, userno, rdate)
        VALUES (#{rnote}, #{score}, #{bno}, #{userno}, NOW())
    </insert>

    <delete id="deleteReply" parameterType="int">
        DELETE FROM reply WHERE rno = #{rno}
    </delete>

    <select id="getReply" parameterType="int" resultType="com.test.model.ReplyVO">
        SELECT * FROM reply WHERE rno = #{rno}
    </select>

    <resultMap id="replyMap" type="com.test.model.ReplyVO">
        <result property="rno" column="rno"/>
        <result property="rnote" column="rnote"/>
        <result property="score" column="score"/>
        <result property="bno" column="bno"/>
        <result property="userno" column="userno"/>
        <result property="rdate" column="rdate"/>
        <result property="nick" column="nick"/>
        <result property="bpname" column="bpname"/>
    </resultMap>
</mapper>
